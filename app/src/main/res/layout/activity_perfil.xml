<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerperfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PerfilActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/profile1" />

        <TextView
            android:id="@+id/nometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Nome"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sobrenometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sobrenome"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enderecotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Endereco"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/saldoperfiltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Saldo:"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/deleteperfilbtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deletar Conta" />

            <Button
                android:id="@+id/editbtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="Editar Perfil" />
        </TableRow>

    </LinearLayout>
    <android.support.design.widget.NavigationView

        android:id="@+id/nvperfil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/colorAccent"
        app:menu="@menu/nav_itens">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>